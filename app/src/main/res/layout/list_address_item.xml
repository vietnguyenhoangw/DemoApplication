<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/background_menu_item"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="12dp"
            android:id="@+id/menu_list_icon"
            android:layout_margin="5dp"
            android:src="@drawable/ic_location_blue_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:fontFamily="@font/montserrat_alternates_light"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/menu_list_icon"
            android:id="@+id/name"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/montserrat_alternates_light"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/menu_list_icon"
            android:id="@+id/address_detail"
            android:text="Address detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_below="@id/address_detail"
            android:layout_toRightOf="@id/menu_list_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/montserrat_alternates_light"
                android:layout_marginLeft="10dp"
                android:id="@+id/time"
                android:text="@string/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/montserrat_alternates_light"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/address_detail"
                android:layout_toRightOf="@id/menu_list_icon"
                android:id="@+id/timeDetail"
                android:text="time detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>